<Window x:Class="WPFWebViewerEVRDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:display="clr-namespace:WPFWebViewerEVRDisplay"
        Title="MainWindow" Height="350" Width="525">
   <Grid>
      <Grid.RowDefinitions>
         <RowDefinition Height="auto" />
         <RowDefinition />
      </Grid.RowDefinitions>
      <Button Grid.Row="0" Click="mLaunchButton_Click" x:Name="mLaunchButton" Content="Launch" FontSize="25"
              HorizontalAlignment="Center" Margin="10" Padding="10" />
      <display:EVRDisplay Grid.Row="1" x:Name="m_EVRDisplay" />
      <Slider Grid.Row="1" x:Name="m_ScaleSlider" VerticalAlignment="Bottom" Value="1" Minimum="0.01" Maximum="1"
              ValueChanged="Slider_ValueChanged" />
      <display:PositionControl x:Name="m_Positioner" Scale="{Binding ElementName=m_ScaleSlider, Path=Value}"
                               VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.Row="1" Width="100"
                               Height="100" Margin="0, 30" />
   </Grid>
</Window>