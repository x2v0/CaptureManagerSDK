<Window x:Class="WPFMediaFoundationPlayerHandler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFMediaFoundationPlayerHandler"
        Loaded="Window_Loaded"
        Title="WPF MediaFoundation Player" Height="350" Width="525">
   <DockPanel>
      <Menu Height="20" DockPanel.Dock="Top">
         <MenuItem Header="Library">
            <MenuItem Header="CaptureManager" IsCheckable="True" Click="Library_Click" x:Name="mCaptureManagerLib"
                      Tag="0" />
            <MenuItem Header="CaptureManager Video Renderer" IsCheckable="True" Click="Library_Click"
                      x:Name="mCaptureManagerVideoRendererLib" Tag="1" />
         </MenuItem>
      </Menu>
      <Grid>
         <local:PlayerControl x:Name="mPlayerControl" />
      </Grid>
   </DockPanel>
</Window>