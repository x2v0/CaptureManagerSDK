<UserControl x:Class="WPFMediaFoundationPlayerHandler.PlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFMediaFoundationPlayerHandler"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">

   <Viewbox Stretch="Uniform">
      <Grid>
         <local:VideoPanel x:Name="mEVRDisplay" />
         <Canvas x:Name="m_PlayerCanvas" Width="{Binding ElementName=mEVRDisplay, Path=ActualWidth}"
                 Height="{Binding ElementName=mEVRDisplay, Path=ActualHeight}" />
      </Grid>
   </Viewbox>
</UserControl>